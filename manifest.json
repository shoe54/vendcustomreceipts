{
  "manifest_version": 2,
  "name": "Vend Receipt Customizer",
  "version": "1.0",
  "description": "Customize your Vend receipts the way you want to.",
  "icons": { "128": "images/icon_128.png" },
  "background": {
	"page": "background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "http://*.vendhq.com/", "https://*.vendhq.com/"],
  "page_action": {
    "default_title": "Vend Receipt Customizer",
    "default_icon": "images/icon_032.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
	  "matches": ["http://*.vendhq.com/", "https://*.vendhq.com/"],
      "js": ["printoverride_contentscript.js"]
    },
    {
	  "matches": ["http://*.vendhq.com/register_sale/viewreceipt/*", "https://*.vendhq.com/register_sale/viewreceipt/*"],
      "js": ["viewreceipt_contentscript.js"]
    }
  ]
}